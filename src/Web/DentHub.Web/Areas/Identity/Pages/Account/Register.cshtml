@page
@model RegisterModel

@using System.Linq
@using DentHub.Web.Controllers
@using DentHub.Data.Models

@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new dentist account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FirstName"></label>
                <input asp-for="Input.FirstName" class="form-control" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.LastName"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Clinic"></label>
               <div>
                    <select asp-for="Input.Clinic" asp-items="@(new SelectList((IList<Clinic>)this.ViewData["ClinicList"], "Id", "Name"))" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <div>
                        <span asp-validation-for="Input.Clinic" class="text-danger" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Input.Specialty"></label>
                <div>
                    <select asp-for="Input.Specialty" asp-items="@(new SelectList((IList<Specialty>)this.ViewData["SpecialtyList"], "Id", "Name"))" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <div>
                        <span asp-validation-for="Input.Specialty" class="text-danger" />
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
