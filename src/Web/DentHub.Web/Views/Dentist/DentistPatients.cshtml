        <tr>
            <th>
                Patient Name
            </th>
            <th>
                Average Rating Provided by Patient
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var patientRating in Model.AverageRatingByPatient)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => patientRating.Value[0])
                </td>
                <td>
                    @Html.DisplayFor(modelItem => patientRating.Value[1])
                </td>
                <td>
                    @*@Html.ActionLink("+ Add file", "AddFile", new { id = patientRating.Key })*@
                    <a href="/File/AddFile/@patientRating.Key">+ Add File</a>
                </td>
                <td>
                    @*@Html.ActionLink("+ Add file", "AddFile", new { id = patientRating.Key })*@
                    <a href="/File/PatientFiles/@patientRating.Key">+ View Files</a>
                </td>
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                        @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                    </td>*@
            </tr>
        }
    </tbody>
</table>
